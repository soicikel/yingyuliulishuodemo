<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/goto_weather_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goto_weather_activity"/>

    <Button
        android:id="@+id/goto_animation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goto_chuangguan"/>

    <Button
        android:id="@+id/goto_netimage_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goto_netimage"
        />

</LinearLayout>
